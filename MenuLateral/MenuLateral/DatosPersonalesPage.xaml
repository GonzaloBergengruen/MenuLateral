<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuLateral.DatosPersonalesPage"
             Title="Datos Personales">

    <VerticalStackLayout Padding="15" Spacing="20">
        <HorizontalStackLayout>
            <Label Text="Nombre: " FontSize="20"/>
            <Label Text="{Binding Nombre}" FontSize="20"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="RUT/CI: " FontSize="20"/>
            <Label Text="{Binding Id}" FontSize="20"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Email: " FontSize="20"/>
            <Label Text="{Binding Email}" FontSize="20"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Telefono: " FontSize="20"/>
            <Label Text="{Binding Telefono}" FontSize="20"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>